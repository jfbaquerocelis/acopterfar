@import 'nib/vendor'
vendor-prefixes = o ms webkit moz official

/*Zone Construct*/
body
	background #F44336
	color white
.Content-messages
	padding-top 3em
	text-align center
.message-img
	width 17em
	margin 0
.message
	text-decoration underline
.message-icon
	margin 0
	color #D22114
	text-shadow 1px 1px 5px #C11003
	font-size 8em
.message-footer
	text-align center
	


.Header
	background #EEEEEE
	border-bottom 2px solid #DDD
.Header-contentImg
	text-align center
.Header-img
	width 16em
	padding-top 15px
.Header-title
	text-shadow 1px 1px 5px #666
	margin-bottom 0
	text-align center
.Header-subtitle
	text-align center
	font-size 24px

.Menu
	background #F44336
	padding 0
.Menu-a
	transition .5s all ease
	&:hover
		font-size 1.2em

.topMenu
.bottomMenu
	background #EEEEEE
.bottomMenu
	padding-bottom .5em
.topMenu
	box-shadow inset 0 1px 5px #DDD
.topMenu-list
.bottomMenu-list
	text-align center
	margin 0
.topMenu-link
.bottomMenu-link
	color #333
	transition .5s all ease
	&:hover
		color #F44336

.mdi-social-group
.mdi-action-assignment
.mdi-social-group-add
.mdi-social-school
.mdi-action-search
.mdi-notification-tap-and-play
.mdi-action-assignment-turned-in
.mdi-action-list
	font-size 42px
	margin 0
	
.Home
	background #EEE
	border-top 2px solid #DDD
	padding 1em
.Home-title
	text-align center

